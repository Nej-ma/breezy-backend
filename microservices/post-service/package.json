{
  "name": "post-service",
  "version": "1.0.0",
  "description": "Microservice de gestion des posts pour Breezy",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon --legacy-watch --polling-interval 1000 src/app.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.15.1",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",    
    "multer": "^1.4.5-lts.1",
    "axios": "^1.6.0",
    "debug": "^4.3.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.5.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "extensionsToTreatAsEsm": [],
    "transform": {},
    "testEnvironment": "node",
    "testMatch": ["**/tests/**/*.test.js", "**/__tests__/**/*.[jt]s?(x)", "**/?(*.)+(spec|test).[tj]s?(x)"]
  }
}