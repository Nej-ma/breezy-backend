# User Service Configuration
NODE_ENV=development
PORT=3002

# Database
MONGODB_URI=mongodb://localhost:27017/breezy_users

# JWT Configuration (pour verification des tokens)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-auth

# Frontend URL
FRONTEND_URL=http://localhost:3000

# API Gateway URL
API_GATEWAY_URL=https://api.breezy.website/api

# Other Services URLs
AUTH_SERVICE_URL=http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
